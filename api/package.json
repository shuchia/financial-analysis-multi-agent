  },
  "devDependencies": {
    "serverless": "^3.30.0",
    "serverless-python-requirements": "^5.4.0",
    "serverless-offline": "^12.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/investforge/api"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "api",
    "fintech",
    "investment"
