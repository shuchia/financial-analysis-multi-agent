{
  "name": "investforge-api",
  "version": "1.0.0",
  "description": "InvestForge serverless API backend",
  "main": "index.js",
  "scripts": {
    "deploy": "sls deploy",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:prod": "sls deploy --stage prod",
